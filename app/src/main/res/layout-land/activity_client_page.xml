<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.weebinatidi.ui.ClientPageActivity">

    <include layout="@layout/client_resumee" />

    <RelativeLayout
        android:id="@+id/layoutgche"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="#000"
        android:orientation="vertical">

        <Button
            android:id="@+id/client_deposit"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/add_coins"
            android:gravity="end" />

        <Button
            android:id="@+id/prises"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/client_deposit"
            android:background="@drawable/ic_up"
            android:gravity="end" />

        <Button
            android:id="@+id/print_invoice_action"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/print"
            android:gravity="end" />

        <Button
            android:id="@+id/edit_client"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/edit_user"
            android:gravity="end" />


        <Button
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/menu"
            android:gravity="end"
            android:visibility="invisible" />
    </RelativeLayout>

    <ListView
        android:id="@+id/deposit_liste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/layoutgche" />

</RelativeLayout>
