<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/invoice_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facture #20"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/invoice_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client Cash"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/invoice_item_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="right"
            android:text="15000 FCFA"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/invoice_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendredi 20"
        android:textSize="20sp" />
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/contenuticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_ticket_select" />
    </LinearLayout>-->

</LinearLayout>