                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text=" x "
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/qte"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/soustotal"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:text="50000"
                    android:textSize="15sp"
                    android:gravity="right"
                    />
            </LinearLayout>





    </RelativeLayout>

