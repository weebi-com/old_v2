<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootlinearlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.weebinatidi.ui.weebi2.ExportSalesDataCsvByDayActivity">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/btn_export_item_sold_by_period"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/couleurlogo"
            android:padding="20dp"
            android:text="Les Ventes Par periode   "
            android:textColor="@color/md_white_1000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="DU"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="AU"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_day_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_top"
        android:padding="20dp">

        <Button
            android:id="@+id/btn_export_customers"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@color/couleurlogo"
            android:padding="20dp"
            android:text="Les clients"
            android:textColor="@color/md_white_1000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_export_product"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@color/couleurlogo"
            android:padding="20dp"
            android:text="Les References"
            android:textColor="@color/md_white_1000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_export_invoice"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@color/couleurlogo"
            android:padding="20dp"
            android:text="Les Factures"
            android:textColor="@color/md_white_1000"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_export_item_sold"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@color/couleurlogo"
            android:padding="20dp"
            android:text="Les Ventes"
            android:textColor="@color/md_white_1000"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_bottom"
        android:padding="20dp">

    <Button
        android:id="@+id/btn_save"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@color/couleurlogo"
        android:padding="20dp"
        android:text="Sauvegarder"
        android:textColor="@color/md_white_1000"
        android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>