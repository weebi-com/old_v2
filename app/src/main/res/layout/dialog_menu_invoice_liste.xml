<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@color/pad_numeric_background_color"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/generic_sorting"
            android:title="@string/balance_sorting" />

        <Button
            android:id="@+id/filter_invoices_bybalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/pad_numeric_background_color"
            android:text="@string/balance_sorting"
            android:textColor="@color/display_background_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:orientation="horizontal">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/filter_invoices_bybalance"
            android:background="@drawable/alphabetical_sorting"
            android:title="@string/alphabetical_sorting" />

        <Button
            android:id="@+id/filter_invoices_bydateascordesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/pad_numeric_background_color"
            android:text="@string/alphabetical_sorting"
            android:textColor="@color/display_background_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:orientation="horizontal">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/filter_invoices_bydateascordesc"
            android:background="@drawable/cancel_subscription"
            android:title="@string/archived_invoices" />

        <Button
            android:id="@+id/show_delete_invoices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/pad_numeric_background_color"
            android:text="@string/archived_invoices"
            android:textColor="@color/display_background_color" />
    </LinearLayout>


</RelativeLayout>